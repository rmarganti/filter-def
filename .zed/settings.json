{
    "languages": {
        "TypeScript": {
            "language_servers": [
                "!typescript-language-server",
                "!eslint",
                "vtsls",
                "..."
            ],
            "formatter": [
                { "code_action": "source.fixAll.oxc" },
                { "code_action": "source.organizeImports" },
                { "language_server": { "name": "oxfmt" } }
            ]
        },
        "TSX": {
            "language_servers": [
                "!typescript-language-server",
                "!eslint",
                "vtsls",
                "..."
            ],
            "formatter": [
                { "code_action": "source.fixAll.oxc" },
                { "code_action": "source.organizeImports" },
                { "language_server": { "name": "oxfmt" } }
            ]
        }
    }
}
